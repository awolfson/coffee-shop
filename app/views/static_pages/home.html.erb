<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>  
<% else %>
  <div class="center hero-unit">
   	<h2>Start your coffee shop</h2>
	<h3>-- or join one of these fine establishments --</h3>
	<%= link_to image_tag("coffee_shop.jpg", alt: "Inside the CoffeeShop"), root_path %>
	<br /><br />
	<%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
  </div>
<% end %>